{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    "group:all",
    ":rebaseStalePrs"
  ],
  "gitAuthor": "Renovate Bot <renovate.bot@veolia.com>",
  "branchPrefix": "feature/renovate/",
  "onboardingBranch": "feature/renovate/configure",
  "js": {
    "managerBranchPrefix": "js-",
    "labels": ["javascript"]
  },
  "python": {
    "managerBranchPrefix": "python-",
    "labels": ["python"]
  },
  "github-actions": {
    "managerBranchPrefix": "github-actions-",
    "labels": ["github-actions"]
  },
  "prHourlyLimit": 0,
  "rollbackPrs" : true,
  "packageRules": [
    {
      "groupName": "Automerge devDeps",
      "matchDepTypes": ["devDependencies", "dev-dependencies"],
      "automerge": true,
      "platformAutomerge": true
    }
  ]
}
