{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":python",
    ":javascript",
    ":github-actions"
  ],
  "python": {
    "packageRules": [
      {
        "matchPaths": ["**/*.py"],
        "automerge": true
      }
    ]
  },
  "javascript": {
    "packageRules": [
      {
        "matchPaths": ["**/*.js", "**/*.jsx"],
        "automerge": true
      }
    ]
  },
  "githubActions": {
    "enabled": true,
    "automerge": true,
    "labels": ["dependencies"],
    "prTitle": "Update GitHub Actions",
    "prBody": "This pull request updates the GitHub Actions workflow files."
  },
  "packageRules": [
    {
      "matchLanguage": "python",
      "automerge": true
    },
    {
      "matchLanguage": "javascript",
      "automerge": true
    }
  ],
  "pullRequest": {
    "labels": ["dependencies"],
    "title": "Update {dependencyLanguage} dependencies",
    "body": "This pull request updates {dependencyLanguage} dependencies."
  }
}
