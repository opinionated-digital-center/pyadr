{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":rebaseStalePrs"
  ],
  "gitAuthor": "Renovate Bot <renovate.bot@veolia.com>",
  "branchPrefix": "feature/renovate/",
  "onboardingBranch": "feature/renovate/configure",
  "prHourlyLimit": 0,
  "rollbackPrs" : true,
  "packageRules": [
    {
      "matchPaths": ["**/*.py"],
      "automerge": true,
      "labels": ["python"]
    },
    {
      "matchPaths": ["**/*.js", "**/*.jsx"],
      "automerge": true,
      "labels": ["javascript"]
    }
  ],
  "github-actions": {
    "enabled": true,
    "automerge": true,
    "labels": ["github-actions"],
    "prTitle": "Update GitHub Actions",
    "prBody": "This pull request updates the GitHub Actions workflow files."
  }
}
