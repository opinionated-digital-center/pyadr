{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":rebaseStalePrs"
  ],
  "gitAuthor": "Renovate Bot <renovate.bot@veolia.com>",
  "branchPrefix": "feature/renovate/",
  "onboardingBranch": "feature/renovate/configure",
  "prHourlyLimit": 0,
  "rollbackPrs" : true,
  "packageRules": [
    {
      "groupName": "Python Poetry Dev Dependencies",
      "matchDepTypes": ["dev-dependencies", "devDependencies"],
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "platformAutomerge": true,
      "labels": ["python"]
    },
    {
      "groupName": "Python Poetry Major Dependencies",
      "matchDepTypes": ["dependencies"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["major"],
      "automerge": true,
      "platformAutomerge": true,
      "labels": ["python"]
    },
    {
      "groupName": "Python Poetry Non-Major Dependencies",
      "matchDepTypes": ["dependencies"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
      "labels": ["python"]
    }
  ]
}
